
.index-list{
	padding: 20rpx;
	border-bottom: 1rpx solid #eee;
}
.index-list1>view:first-child{
	color: #929292 ;
}
.index-list1>view:first-child image{
	width: 85rpx;
	height: 85rpx;
	border-radius: 100%;
	margin-right: 10rpx;
}
.index-list1>view:last-child{
	background-color: #f4f4f4;
	border-radius: 5rpx;
	padding: 0 10rpx;
}
.index-list2{
	padding-top: 15rpx;
	font-size: 32rpx;
}
.index-list3{
	position: relative;
	padding-top: 15rpx;
}
.index-list3>image{
	width: 100%;
	border-radius: 20rpx;
}
.index-list4{
	padding: 15rpx 0;
}
.index-list4 view{
	color: #999;
}
.index-list4>view>view>view{
	/* 底部图标样式 */
	margin-right: 10rpx;
}
.index-list4>view>view:first-child{
	/* 底部左右图标第一个样式 */
	margin-right: 10rpx;
}
.index-list-play{
	position: absolute;
	font-size: 140rpx;
	color: #fff;
}
.index-list-playInfo{
	position: absolute;
	background-color: rgba(51,51,51,0.72);
	color: #fff;
	bottom: 8rpx;
	right: 8rpx;
	border-radius: 40rpx;
	font-size: 22rpx;
	padding: 0 12rpx;
}
.index-list4 .active,.index-list4 .active>view{
	color: #c5f61c;
}

